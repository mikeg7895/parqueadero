@{
    ViewData["Title"] = "Dashboard Administrador";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Dashboard Administrador</h1>

    <div class="row">
        <!-- Gestión de Parqueadero -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Mis Parqueaderos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ParqueaderoNombre</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-parking fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Parqueaderos" asp-action="Index" class="btn btn-primary btn-sm">Gestionar</a>
                </div>
            </div>
        </div>

        <!-- Gestión de Trabajadores -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Trabajadores y clientes</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TrabajadoresCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Usuario" asp-action="Index" class="btn btn-info btn-sm">Gestionar</a>
                </div>
            </div>
        </div>

        <!-- Reportes de Cobro -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Tarifas</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Tarifas" asp-action="Index" class="btn btn-warning btn-sm">Ver Tarifas</a>
                </div>
            </div>
        </div>

        <!-- Reportes de reservas -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Reservas</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Reserva" asp-action="Index" class="btn btn-info btn-sm">Ver Reservas</a>
                </div>
            </div>
        </div>

        <!-- Reporte de vehiculos -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Vehiculos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-car fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Vehiculo" asp-action="Index" class="btn btn-info btn-sm">Ver Vehiculos</a>
                </div>
            </div>
        </div>

        <!-- Reporte de descuentos -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Descuentos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-newspaper fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Descuentos" asp-action="Index" class="btn btn-info btn-sm">Ver Descuentos</a>
                </div>
            </div>
        </div>

        <!-- Reporte planes especiles -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Planes Especiales</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-newspaper fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="PlanesEspeciales" asp-action="Index" class="btn btn-info btn-sm">Ver Planes Especiales</a>
                </div>
            </div>
        </div>

        <!-- reporte de cobro y facturacion -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Cobro y Facturacion</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-invoice-dollar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Factura" asp-action="Index" class="btn btn-info btn-sm">Ver Cobros</a>
                </div>
            </div>
        </div>

    </div>
</div> 