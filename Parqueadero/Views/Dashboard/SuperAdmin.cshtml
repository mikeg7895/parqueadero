@{
    ViewData["Title"] = "Dashboard Super Admin";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Dashboard Super Admin</h1>

    <div class="row">
        <!-- Gestión de Empresas -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Empresas</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.EmpresasCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Empresas" asp-action="Index" class="btn btn-primary btn-sm">Gestionar</a>
                </div>
            </div>
        </div>

        <!-- Gestión de Parqueaderos -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Parqueaderos</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ParqueaderosCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-parking fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Parqueaderos" asp-action="Index" class="btn btn-success btn-sm">Gestionar</a>
                </div>
            </div>
        </div>

        <!-- Gestión de Usuarios -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Usuarios</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.UsuariosCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Usuario" asp-action="Index" class="btn btn-info btn-sm">Gestionar</a>
                </div>
            </div>
        </div>
    </div>
</div> 