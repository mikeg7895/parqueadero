@{
    ViewData["Title"] = "Dashboard Trabajador";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Dashboard Trabajador</h1>

    <div class="row">
        <!-- Gestión de Reservas -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Reservas</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ReservasCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Reserva" asp-action="Index" class="btn btn-primary btn-sm">Gestionar</a>
                </div>
            </div>
        </div>

         <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Trabajadores y clientes</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TrabajadoresCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Usuario" asp-action="Index" class="btn btn-info btn-sm">Gestionar</a>
                </div>
            </div>
        </div>

        <!-- Gestión de Vehículos -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Vehículos en Parqueadero</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.VehiculosCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-car fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Vehiculo" asp-action="Index" class="btn btn-success btn-sm">Ver Vehículos</a>
                </div>
            </div>
        </div>

        <!-- Gestión de Cobros -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Cobros</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.CobrosDelDia</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-controller="Factura" asp-action="Index" class="btn btn-info btn-sm">Ver Cobros</a>
                </div>
            </div>
        </div>
    </div>
</div> 